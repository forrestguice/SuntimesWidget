<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout style="@style/SunsetTimeLayout"
        android:orientation="horizontal" android:layoutDirection="rtl">  <!-- TODO: fix layout direction for rtl locales (reverse layout with layoutDirection="ltr") -->

        <TextView
            style="@style/WidgetSuffixTextView"
            android:id="@+id/text_time_moonrise_suffix"
            android:layout_gravity="bottom"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            tools:text="PM" />

        <TextView
            style="@style/WidgetTimeTextView"
            android:id="@+id/text_time_moonrise"
            android:textColor="@color/moonIcon_color_rising_dark"
            tools:text="11:00" />

        <ImageView
            style="@style/SunsetTimeImageView"
            android:id="@+id/icon_time_moonrise" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_marginLeft="2dp" android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginStart="2dp" android:layout_marginEnd="1dp"
            android:contentDescription="@string/moonrise" />

    </LinearLayout>

</merge>