<?xml version="1.0" encoding="utf-8"?>
<com.forrestguice.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/brown_900">

    <TextView android:id="@+id/text_title"
        android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="?attr/text_size_xlarge" android:textStyle="bold"
        android:text="@string/crash_dialog_title" />

    <com.forrestguice.support.widget.ImageView android:id="@+id/icon"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_action_suntimes"
        android:contentDescription="@string/app_name" />

    <TextView android:id="@+id/text_message"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textSize="?attr/text_size_small" android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/text_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="8dp"
        android:text="@string/crash_dialog_message" />

    <ScrollView android:id="@+id/scroll"
        app:layout_constraintTop_toBottomOf="@+id/text_message"
        app:layout_constraintBottom_toTopOf="@+id/button_copy"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
        android:background="?attr/dialogBackgroundAlt"
        android:layout_marginTop="4dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
        android:layout_width="match_parent" android:layout_height="0dp">

        <TextView android:id="@+id/text_exception"
            android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="4dp"
            android:textSize="?attr/text_size_tiny" android:textStyle="normal"
            android:scrollHorizontally="true" android:textIsSelectable="true"
            tools:text="Exception here" />

    </ScrollView>

    <Button android:id="@+id/button_copy"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/scroll"
        app:layout_constraintBottom_toTopOf="@+id/text_message1"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
        android:layout_marginTop="4dp"
        android:text="@string/crash_dialog_copy" />

    <TextView android:id="@+id/text_message1"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textSize="?attr/text_size_small"
        app:layout_constraintTop_toBottomOf="@+id/button_copy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp"
        android:textIsSelectable="true"
        android:text="@string/crash_dialog_message1" />

</com.forrestguice.support.constraint.ConstraintLayout>