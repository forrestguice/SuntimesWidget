<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SunsetTimeWidget_dark"
    android:background="?attr/dialogBackgroundAlt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:id="@+id/appwidget_location_name_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:paddingTop="@dimen/settingsGroup_padding">

        <LinearLayout android:id="@+id/appwidget_location_controlPanel0"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <com.forrestguice.support.widget.ImageButton android:id="@+id/cancel_button" style="@style/ActionButton"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:src="?attr/icActionBack"
                android:contentDescription="@string/dialog_cancel" />

        </LinearLayout>

        <EditText android:id="@+id/appwidget_location_name"
            android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"
            android:textAppearance="?attr/textAppearanceSmallPopupMenu"
            android:hint="@string/configHint_location_name0" android:inputType="text"
            android:paddingLeft="5dp" android:paddingRight="5dp"
            android:layout_gravity="center_vertical" />

        <LinearLayout android:id="@+id/appwidget_location_controlPanel1"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical">

            <com.forrestguice.support.widget.ImageButton android:id="@+id/save_button" style="@style/ActionButton"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:src="?attr/icActionSave"
                android:contentDescription="@string/configAction_savePlace" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="horizontal">

        <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">

            <include layout="@layout/layout_view_place" />

            <View
                android:id="@+id/appwidget_location_latlon_overlay"
                android:layout_width="50dp" android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:layout_alignLeft="@id/appwidget_location_latlon" android:layout_alignStart="@id/appwidget_location_latlon"
                android:layout_alignRight="@id/appwidget_location_latlon" android:layout_alignEnd="@id/appwidget_location_latlon"
                android:layout_alignBottom="@id/appwidget_location_latlon"
                android:layout_alignTop="@id/appwidget_location_latlon"/>

        </RelativeLayout>

        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" android:layout_gravity="top">

            <ViewFlipper android:id="@+id/view_flip2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <FrameLayout android:id="@+id/getFixProgress"
                    android:layout_width="fill_parent" android:layout_height="fill_parent">

                    <LinearLayout android:id="@+id/appwidget_location_getfix_controls"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:orientation="vertical" android:layout_gravity="center">

                        <com.forrestguice.support.widget.ImageButton android:id="@+id/appwidget_location_getfix"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:src="?attr/icActionGPS_searching"
                            android:layout_gravity="center"
                            android:contentDescription="@string/configAction_getFix" />

                        <com.forrestguice.support.widget.ImageButton android:id="@+id/appwidget_location_mapview"
                            android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:src="?attr/icActionWorldMap"
                            android:layout_gravity="center"
                            android:contentDescription="@string/configAction_mapLocation" />

                    </LinearLayout>

                    <TextView android:id="@+id/appwidget_location_getfixprogress_label"
                        android:layout_width="wrap_content" android:layout_height="wrap_content"
                        android:singleLine="true" android:textSize="?attr/text_size_tiny"
                        android:layout_gravity="center"
                        android:layout_marginTop="32dp"
                        tools:text="25.35m" />

                    <ProgressBar
                        android:id="@+id/appwidget_location_getfixprogress"
                        style="?android:attr/progressBarStyle" android:background="?attr/selectableItemBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />

                </FrameLayout>

                <LinearLayout android:id="@+id/getFixProgress_gone"
                    android:layout_width="fill_parent" android:layout_height="fill_parent"
                    android:orientation="horizontal">

                </LinearLayout>

            </ViewFlipper>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout android:id="@+id/layout_debug_log"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginLeft="4dp" android:layout_marginRight="4dp" android:layout_marginTop="4dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:textSize="?attr/text_size_tiny" android:textStyle="bold"
            android:text="@string/configLabel_getFix_gnss" />

        <android.support.v4.widget.NestedScrollView android:id="@+id/scroll_debug_log"
            android:layout_width="match_parent" android:layout_height="100dp"
            android:background="?attr/dialogBackground">

            <LinearLayout
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:layout_margin="4dp">

                <TextView android:id="@+id/text_debug_log"
                    android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:textSize="?attr/text_size_tiny"
                    tools:text="log\ncontent\ngoes\nhere\non\nmultiple\nlines" />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

    <com.forrestguice.suntimeswidget.getfix.GnssStatusBarView android:visibility="visible"
        android:id="@+id/gps_status" android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent" android:layout_height="72dp"
        android:layout_marginLeft="4dp" android:layout_marginRight="4dp" />




</LinearLayout>
