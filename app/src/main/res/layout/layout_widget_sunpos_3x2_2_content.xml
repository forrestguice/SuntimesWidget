<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView android:id="@+id/text_title" style="@style/WidgetTitleTextView"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:gravity="start" tools:text="title" />

    <LinearLayout
        android:id="@+id/info_time_lightmap_labels"
        android:layout_gravity="center"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_marginBottom="0dp" android:layout_marginLeft="2dp" android:layout_marginRight="2dp">

        <TextView style="@style/WidgetTimeTextView" android:maxLines="1"
            android:id="@+id/info_sun_elevation_current" android:textStyle="bold"
            android:layout_marginLeft="2dp" android:layout_marginStart="2dp"
            android:layout_marginRight="8dp" android:layout_marginEnd="8dp"
            android:layout_marginTop="0dp" android:layout_marginBottom="0dp"
            android:text="" tools:text="48" />

        <TextView style="@style/WidgetTimeTextView" android:maxLines="1"
            android:id="@+id/info_sun_azimuth_current" android:textStyle="bold"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_marginRight="16dp" android:layout_marginEnd="16dp"
            android:layout_marginTop="0dp" android:layout_marginBottom="0dp"
            android:text="" tools:text="280" />

        <TextView style="@style/WidgetTimeTextView" android:maxLines="1"
            android:id="@+id/info_sun_azimuth_rising" android:textStyle="bold"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp"
            android:layout_marginRight="8dp" android:layout_marginEnd="8dp"
            android:layout_marginTop="0dp" android:layout_marginBottom="0dp"
            android:text="" tools:text="90 E" />

        <TextView style="@style/WidgetTimeTextView" android:maxLines="1"
            android:id="@+id/info_sun_elevation_atnoon" android:textStyle="bold"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_marginRight="8dp" android:layout_marginEnd="8dp"
            android:layout_marginTop="0dp" android:layout_marginBottom="0dp"
            android:text="" tools:text="74" />

        <TextView style="@style/WidgetTimeTextView" android:maxLines="1"
            android:id="@+id/info_sun_azimuth_setting" android:textStyle="bold"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            android:layout_marginRight="8dp" android:layout_marginEnd="8dp"
            android:layout_marginTop="0dp" android:layout_marginBottom="0dp"
            android:text="" tools:text="270 W" />

    </LinearLayout>

    <ImageView android:id="@+id/info_time_graph"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center" android:layout_marginLeft="2dp" android:layout_marginRight="1dp"
        android:layout_marginStart="2dp" android:layout_marginEnd="1dp"
        android:contentDescription="@string/configAction_lightGraph" />

</merge>