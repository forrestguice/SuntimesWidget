<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout android:orientation="vertical"
        android:id="@+id/layout_colors_graph"
        android:layout_width="wrap_content" android:layout_height="wrap_content">

        <com.forrestguice.suntimeswidget.settings.colors.ColorChooserView
            android:id="@+id/chooser_dayColor"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:reverse="true"
            app:labelText="@string/timeMode_day"
            app:hintText="@string/configHint_themeColorSunrise" />

        <com.forrestguice.suntimeswidget.settings.colors.ColorChooserView
            android:id="@+id/chooser_civilColor"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginLeft="48dp" android:layout_marginStart="48dp"
            app:reverse="true"
            app:labelText="@string/timeMode_civil"
            app:hintText="@string/configHint_themeColorSunrise" />

        <com.forrestguice.suntimeswidget.settings.colors.ColorChooserView
            android:id="@+id/chooser_nauticalColor"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:reverse="true"
            app:labelText="@string/timeMode_nautical"
            app:hintText="@string/configHint_themeColorSunrise" />

        <com.forrestguice.suntimeswidget.settings.colors.ColorChooserView
            android:id="@+id/chooser_astroColor"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginLeft="48dp" android:layout_marginStart="48dp"
            app:reverse="true"
            app:labelText="@string/timeMode_astronomical"
            app:hintText="@string/configHint_themeColorSunrise" />

        <com.forrestguice.suntimeswidget.settings.colors.ColorChooserView
            android:id="@+id/chooser_nightColor"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:reverse="true"
            app:labelText="@string/timeMode_night"
            app:hintText="@string/configHint_themeColorSunrise" />


        <com.forrestguice.suntimeswidget.settings.colors.ColorChooserView
            android:id="@+id/chooser_pointFill"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginLeft="48dp" android:layout_marginStart="48dp"
            app:reverse="true"
            app:labelText="@string/configLabel_themeColorFill"
            app:hintText="@string/configHint_themeColorSunrise" />

        <com.forrestguice.suntimeswidget.settings.colors.ColorChooserView
            android:id="@+id/chooser_pointStroke"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            app:reverse="true"
            app:labelText="@string/configLabel_themeColorBorder"
            app:hintText="@string/configHint_themeColorSunrise" />

    </LinearLayout>

</merge>
