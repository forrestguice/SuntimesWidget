<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <LinearLayout android:id="@+id/moonphase_layout" android:orientation="vertical"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginTop="2dp" android:layout_marginBottom="2dp" android:weightSum="4">

            <include layout="@layout/info_moonphase" />

            <LinearLayout android:gravity="center"
                android:layout_width="match_parent" android:layout_height="wrap_content">

                <TextView android:visibility="gone"
                    style="@style/SunsetTimeTextView2"
                    android:id="@+id/text_info_moon_elevation" android:gravity="center" android:layout_gravity="center"
                    android:textColor="?attr/moonriseColor" android:layout_marginRight="8dp" android:layout_marginEnd="8dp"
                    tools:text="270  W" />

                <TextView android:visibility="gone"
                    style="@style/SunsetTimeTextView2"
                    android:id="@+id/text_info_moon_azimuth" android:gravity="center" android:layout_gravity="center"
                    android:textColor="?attr/moonriseColor"
                    tools:text="270  W" />

            </LinearLayout>

        </LinearLayout>

        <TextView android:id="@+id/txt_empty"
                  android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:gravity="center" android:layout_gravity="center"
                  android:visibility="gone"
                  android:layout_margin="16dp"
                  android:textSize="12sp"
                  android:text="@string/configLabel_ui_showmoon_notImplemented" />

    </FrameLayout>

</merge>