<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

    <com.forrestguice.support.design.widget.RecyclerView android:visibility="visible"
        android:id="@+id/info_equinoxsolstice_flipper1"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        tools:listitem="@layout/info_time_solsticequinox2" tools:itemCount="1" />

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:orientation="horizontal" android:layout_gravity="end|center_vertical"
        android:padding="3dp">
        <ImageButton
            android:id="@+id/info_time_prevbtn"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="end" android:padding="4dp"
            android:src="?attr/icActionPrevious"
            android:background="?attr/fab_backgroundDrawable" android:elevation="2dp"
            android:contentDescription="@string/today" />

        <ImageButton
            android:id="@+id/info_time_nextbtn"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="end" android:padding="4dp"
            android:src="?attr/icActionNext"
            android:background="?attr/fab_backgroundDrawable" android:elevation="2dp"
            android:contentDescription="@string/today" />
    </LinearLayout>

    <TextView android:id="@+id/txt_empty" android:visibility="gone"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:gravity="center" android:layout_gravity="center"
        android:layout_margin="16dp"
        android:textSize="12sp"
        android:text="@string/feature_not_supported_by_source" />

</FrameLayout>