<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include layout="@layout/icons_moon_phases" />

        <LinearLayout
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:orientation="vertical" android:layout_gravity="center_vertical" android:weightSum="1">

            <TextView
                android:id="@+id/text_info_moonphase" style="@style/SunsetTimeTextView2"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:gravity="start|bottom" android:maxLines="2" android:ellipsize="end"
                android:layout_marginTop="0dp" android:layout_marginBottom="0dp"
                tools:text="Waning Crescent" />

            <TextView
                android:id="@+id/text_info_moonillum" style="@style/SunsetTimeTextView2"
                android:layout_width="wrap_content" android:layout_height="0dp" android:layout_weight="1"
                android:gravity="start|top" android:layout_marginTop="0dp" android:layout_marginBottom="0dp"
                tools:text="0%" />

        </LinearLayout>

    </LinearLayout>
</merge>