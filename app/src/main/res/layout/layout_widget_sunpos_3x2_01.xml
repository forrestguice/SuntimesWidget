<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widgetframe_outer_3x2"
    style="@style/SunsetTimeWidgetFrame" android:layout_width="match_parent">

    <LinearLayout android:id="@+id/widgetframe_inner" style="@style/SunsetTimeWidget"
        android:orientation="vertical" android:layout_width="match_parent">

        <TextView android:id="@+id/text_title" style="@style/WidgetTitleTextView"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:gravity="start" tools:text="title" />

        <com.forrestguice.support.widget.ImageView android:id="@+id/info_time_worldmap"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="center" android:layout_marginLeft="2dp" android:layout_marginRight="1dp"
            android:layout_marginStart="2dp" android:layout_marginEnd="1dp"
            android:contentDescription="@string/configAction_worldMap" />

    </LinearLayout>

</FrameLayout>