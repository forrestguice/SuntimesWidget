<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/griditem"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical" android:gravity="center_vertical"
    android:baselineAligned="false" android:padding="4dp">

    <LinearLayout style="@style/SunsetTimeWidget"
                  android:id="@+id/widgetframe_inner">

        <TextView style="@style/SunsetTimeTextTitleView"
                  android:id="@+id/text_title"
                  android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:gravity="start" android:singleLine="true" android:ellipsize="marquee"
                  tools:text="title" />

        <include layout="@layout/info_time_sunrise_0" />

        <include layout="@layout/info_time_sunset_0" />

    </LinearLayout>

</LinearLayout>