<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/layout_app_menubar"
            android:layout_width="match_parent" android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/app_menubar" style="@style/AppToolbarStyle"
                app:title="@string/loadaction_dialog_title" />

        </android.support.design.widget.AppBarLayout>

        <LinearLayout android:id="@android:id/content"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView android:id="@+id/list_intentid" android:nestedScrollingEnabled="true"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:gravity="center_vertical" android:layout_gravity="center_vertical" />

        </LinearLayout>

    </LinearLayout>


</merge>
